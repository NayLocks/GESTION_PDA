{% block body %}
<div class="row">
    {% for company in companies %}
        <div class="col-lg-6 col-xl-4">
            <div class="card mb-3 widget-content">
                <div class="widget-content-outer BlockCountPDA">
                    <a href="#">
                        <div class="widget-content-wrapper">
                            <div class="widget-content-left">
                                <div class="widget-heading BlockCountPDA">{{ company.name }}</div>
                                <div class="widget-subheading BlockCountPDA">{{ company.percent }}% du Parc</div>
                            </div>
                            <div class="widget-content-right">
                                <div class="widget-numbers BlockCountPDA">{{ company.nb }}</div>
                            </div>
                        </div>
                        <div class="widget-progress-wrapper">
                            <div class="progress-bar-xs progress">
                                <div class="progress-bar BlockCountPDABack BlockCountPDA" role="progressbar" aria-valuenow="{{ company.percent }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ company.percent }}%;"></div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
